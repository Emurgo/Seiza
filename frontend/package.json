{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "eslint": "eslint src --max-warnings=0",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report || exit 0",
    "prettier": "prettier-eslint --write \"src/**/*.js\"",
    "extract:messages": "react-intl-cra 'src/**/*.{js,jsx}' -o 'src/i18n/messages/messages.json'",
    "manage:translations": "node ./translationRunner.js",
    "test": "yarn flow && yarn eslint"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "apollo-cache-inmemory": "^1.4.2",
    "apollo-client": "^2.4.12",
    "apollo-link-http": "^1.5.11",
    "bignumber.js": "^8.0.2",
    "classnames": "^2.2.6",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "react": "^16.8.0",
    "react-apollo": "^2.4.1",
    "react-dom": "^16.8.0",
    "react-intl": "^2.8.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3",
    "recompose": "^0.30.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "eslint-config-vacuumlabs": "^1.7.0",
    "flow-bin": "^0.92.1",
    "flow-coverage-report": "^0.6.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "prettier-eslint-cli": "^4.7.1",
    "react-intl-cra": "^0.3.4",
    "react-intl-translations-manager": "^5.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "flow-coverage-report": {
    "globIncludePatterns": [
      "src/**/*.js"
    ],
    "reportTypes": [
      "text",
      "html",
      "json"
    ]
  }
}
